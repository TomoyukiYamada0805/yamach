<!DOCTYPE html>
<html>
  <head>
    <title>yamadachannel</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag('favicon.ico') %>
  </head>

  <body>
    <header id="site-header">
      <div class="site-header-content">
        <a class="top_link" href="/">
          <h1 class="site-title thema_color">やまだちゃんねる</h1>
        </a>
        <div class="header-button">
          <% if user_signed_in? %>
            <% if current_user.authority.to_i == 1 %>
             <%= link_to 'カテゴリを作成', new_category_name_path %>
            <% end %>
            <%= link_to 'スレッドを立てる', new_thread_list_path %>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
          <% else %>
            <%= link_to "ログイン", new_user_session_path, class: 'post signin' %>
            <!-- ログイン画面に移行する -->
            <%= link_to "新規登録", new_user_registration_path, class: 'post' %>
            <!-- 新規登録画面に移行する -->
          <% end %>
        </div>
      </div>
    </header>
    
    <div id="content">
      <%= yield %>
    </div>
  </body>
</html>

<div class='thread_list_container'>
  <div class='thread_list_container__item'>
    <h2>スレッドを立てる</h2>
  </div>
</div>

<%= form_with model: @thread_list, data: {remote: false} do |f| %>
  <%= render 'shared/error_messages', model: f.object %>

  <div class='thread_list_container'>
    <div class='thread_list_container__item'>
      <%= f.text_field :title, placeholder: 'タイトル (30文字以内で入力してください)', class: 'title_submit_area'%>
    </div>
  </div>

  <div class='thread_list_container'>
    <div class='thread_list_container__item'>
      <%= f.text_area :body, class: 'body_submit_area', placeholder: '本文 (500文字以内で入力してください)' %>
    </div>
  </div>

  <div class='category_container'>
    <div class='category_container__category_item'>
      <%= f.label :category, 'カテゴリ', class: 'category_label' %>
      <%= f.collection_check_boxes(:category_name_ids, CategoryName.all, :id, :name) do |category| %> 
        <%= category.label class: 'category_container__category_item_label' do %>
          <%= category.check_box %>
          <%= category.text %>
        <% end %>
      <% end %>
    
    </div>
  </div>

  <div class='category_container'>
    <div class='width_60 text_align_right'>
      <%= f.submit '登録', class: 'submit_button' %>
    </div>
  </div>
<% end %>